rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Replace with actual admin check (e.g., custom claim or specific UID)
      return isAuthenticated() && request.auth.token.email == 'admin@respectpill.com';
    }

    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    // Profiles collection
    match /profiles/{userId} {
      allow read: if isAuthenticated(); // Profiles might be public/semi-public
      allow write: if isOwner(userId);
    }

    // Trackers collection
    match /trackers/{trackerId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
      allow update: if isOwner(resource.data.userId) && isOwner(request.resource.data.userId);
      allow delete: if isOwner(resource.data.userId);
    }

    // Plans collection
    match /plans/{planId} {
      allow read: if isOwner(resource.data.userId);
      allow write: if isOwner(resource.data.userId); // Or generated by system/admin
    }

    // Content collection (Curriculum)
    match /content/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Community Posts
    match /posts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.authorId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.authorId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.authorId == request.auth.uid;
    }

    // Comments
    match /comments/{commentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.authorId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.authorId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.authorId == request.auth.uid;
    }
    
    // Reports/Feedback
    match /reports/{reportId} {
      allow create: if isAuthenticated();
      allow read: if isOwner(resource.data.userId) || isAdmin();
    }
  }
}
